{
	"name": "greenpeace/planet4-child-theme-denmark",
	"description": "Child theme for the Planet 4 Wordpress project for GP Denmark",
	"type":"wordpress-theme",
	"minimum-stability" : "stable",
	"authors": [
		{
			"name": "Anselm Hannemann",
			"email": "ahannema@greenpeace.org",
			"role": "Front-End Developer"
		},
		{
			"name": "Svilena Koleva",
			"email": "skoleva@greenpeace.org",
			"role": "Web Developer"
		}
	],
	"license": "GPL-3.0+",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"support": {
		"issues": "https://github.com/greenpeace/planet4-child-theme/issues",
		"wiki": "https://github.com/greenpeace/planet4-child-theme/wiki",
		"source": "https://github.com/greenpeace/planet4-child-theme"
	},
	"extra": {
		"installer-paths": {
			"../../plugins/{$name}/": [
				"wpackagist-plugin/*",
				"type:wordpress-plugin"
			]
		}
	},
	"require" : {    
		"wpackagist-plugin/timber-library": "1.*"
	},
	"require-dev":{ 
		"squizlabs/php_codesniffer": "^3.5.3",
		"wp-coding-standards/wpcs": "^2.2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
		"stevegrunwell/phpunit-markup-assertions": "^1.2",
		"phpunit/phpunit": "^6.2"
	},
	"scripts": {
	  "fixes": "vendor/bin/phpcbf",
	  "sniffs": "vendor/bin/phpcs"
	}
}
